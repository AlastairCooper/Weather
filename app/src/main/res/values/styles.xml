<resources>
    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_colour</item>
        <item name="android:colorBackground">@color/background_colour</item>
    </style>

    <style name="dataHeading" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/half_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="graph_select_spinner" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/half_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="headingText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dataValue" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dataString" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="windString" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="optionButtons" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/background_colour</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/button_background</item>
    </style>

    <style name="dailyTextViews" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="locationValueTitles" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/half_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="locationValueValues" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dailyButtons" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/background_colour</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/button_background</item>
    </style>

    <style name="savLoc_details" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>